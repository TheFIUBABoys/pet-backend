.page-header
  = link_to new_pet_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Pet
  %h1 Listing pets

.filters
  = render "filters"

%hr

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Type
        %th Gender
        %th Name
        %th Description
        %th
        %th
        %th

    %tbody
      - @pets.each do |pet|
        %tr
          %td= t("pets.#{pet.type.downcase}")
          %td= t("pets.#{pet.gender}")
          %td= pet.name
          %td= pet.description
          %td= link_to 'Show', pet
          %td= link_to 'Edit', edit_pet_path(pet)
          %td= link_to 'Destroy', pet, data: { confirm: 'Are you sure?' }, method: :delete

= will_paginate @pets, renderer: BootstrapPagination::Rails
